<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MarjamPrism.Views.VoiceSearchPage">


    <StackLayout>
        <ImageButton Source="https://image.flaticon.com/icons/png/512/1458/1458584.png"
                                   x:Name="search"
                                   HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="20" BackgroundColor="White"
                                />
        <Label Text="Tap the mic and try saying 'Show me Macbooks'" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontSize="18" TextColor="Black" LineBreakMode="WordWrap" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="20"></Label>
    </StackLayout>
    
</ContentPage>